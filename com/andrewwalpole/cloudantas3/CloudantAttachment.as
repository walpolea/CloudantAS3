package com.andrewwalpole.cloudantas3 {		////////////////////	//UNDER CONSTRUCTION	////////////////////	public class CloudantAttachment {				//These are not all the content-types that are supported, just some of the more notable ones, feel free to use others.		public static const OCTET_STREAM:String = "application/octet-stream";		public static const PDF:String = "application/pdf";		public static const ZIP:String = "application/zip";		public static const GIF_IMAGE:String = "image/gif";		public static const JPG_IMAGE:String = "image/jpeg";		public static const PNG_IMAGE:String = "image/png";		public static const MP3_AUDIO:String = "audio/mpeg";		public static const WAV_AUDIO:String = "audio/x-wav";		public static const HTML_TEXT:String = "text/html";		public static const PLAIN_TEXT:String = "text/plain";						public var filename:String;		public var content_type:String;		public var data:String;				public function CloudantAttachment( filename:String, content_type:String, data:String ) {						this.filename = filename;			this.content_type = content_type;			this.data = data;					}	}	}