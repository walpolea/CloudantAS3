package com.andrewwalpole.cloudantas3 {		public class CloudantDoc {		public var _rev:String;		public var _id:String;		public var _data:Object;		public var _attachments:Object;		/////////		//Create a Cloudant Document		//biggest thing to note is that attachments don't do anything yet.		//your rev and id can also be props on the data object.		public function CloudantDoc( data:Object = null, id:String = null, rev:String = null, attachments:Object = null ) {						this._data = {};						if( data ) {				initData( data );			}						if( id ) {				this._id = id;			}						if( rev ) {				this._rev = rev;			}						if( attachments ) {				this._attachments = attachments;			}		}				private function initData( data:Object ):void {									trace("init data");			if( data.rev ) {				this._rev = data.rev;				trace( "setting rev: ", this._rev );			}						if( data.id ) {				this._id = data.id;				trace( "setting id: ", this._id );			}						if( data._attachments ) {				this._attachments = data._attachments;			} else {				this._attachments = {};			}						//if these were set, we just saved them, so delete them from the object so that they aren't mistaken for data			//is this cool?			delete data.rev;			delete data.id;			delete data._attachments;						this._data = data;		}				//not yet		public function addAttachment( ca:CloudantAttachment ):void {					}				public function toObject():Object {			var d:Object = {};						for( var key:String in _data ) {				d[key] = _data[key];			}						if( _rev ) {				d["_rev"] = _rev;			}						if( _id ) {				d["_id"] = _id;			}						return d;		}		public function toString():String {			return JSON.stringify( this.toObject() );		}			}	}